<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tab_text">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="selected_tab_text">
        <item name="android:textColor">#FF6200EE</item>
    </style>

    <style name="BalsamicFont">
        <item name="android:fontFamily">@font/balsamiq_sans</item>
    </style>

    <!--to toggle the open close button
        of the navigation drawer-->
    <string name="nav_open">Open</string>
    <string name="nav_close">Close</string>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60dp</item>
    </style>

    <style name="roundedImageViewList" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="MyCustomFontTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/balsamiq_sans</item>
        <item name="android:fontFamily">@font/balsamiq_sans</item>
    </style>
</resources>