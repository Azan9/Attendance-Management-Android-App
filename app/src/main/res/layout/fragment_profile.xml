<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    app:contentPadding="1dp"
                    app:cardCornerRadius="60dp"
                    app:cardPreventCornerOverlap="false">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/user_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        app:strokeColor="@color/white"
                        app:shapeAppearanceOverlay="@style/roundedImageView"/>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="-20dp"
                    android:backgroundTint="#73BBEC"
                    app:contentPadding="1dp"
                    app:cardCornerRadius="60dp">

                    <ImageView
                        android:id="@+id/edit_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:background="@drawable/editbtn"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!-- TODO: Update blank fragment layout -->

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/balsamiq_sans"/>

            <TextView
                android:id="@+id/user_role_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/balsamiq_sans"
                android:text="Role"
                android:textAlignment="center"
                android:textSize="16sp"
                android:paddingBottom="10dp"/>
        </LinearLayout>



        <TextView
            android:id="@+id/private_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/balsamiq_sans"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:text="PRIVATE INFORMATION"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/username"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/username"/>

            <EditText
                android:id="@+id/edit_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/profileicons"
                android:fontFamily="@font/balsamiq_sans"
                android:textColorHighlight="@color/grey"
                android:hint="Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textIsSelectable="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/email"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/edit_email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/profileicons"
                android:fontFamily="@font/balsamiq_sans"
                android:hint="Email"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textIsSelectable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phone"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/smartphone" />

            <EditText
                android:id="@+id/edit_phone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/profileicons"
                android:fontFamily="@font/balsamiq_sans"
                android:hint="Phone Number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textIsSelectable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gender"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/man" />

            <EditText
                android:id="@+id/edit_gender_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/profileicons"
                android:fontFamily="@font/balsamiq_sans"
                android:hint="Gender"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textIsSelectable="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/birthday"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/birthdaycake" />

            <EditText
                android:id="@+id/edit_birthday_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/profileicons"
                android:fontFamily="@font/balsamiq_sans"
                android:hint="Birthdate"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textIsSelectable="false"/>
        </LinearLayout>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:textColor="@color/white"
            android:text="Save"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/balsamiq_sans"/>

        <TextView
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/balsamiq_sans"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="CHANGE PASSWORD"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password_image"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/current_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/balsamiq_sans"
                android:hint="Enter Current Password"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:inputType="textPassword"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password_image1"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/change_password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/balsamiq_sans"
                android:hint="Enter New Password"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:inputType="textPassword"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password_image2"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/lock" />

            <EditText
                android:id="@+id/change_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/balsamiq_sans"
                android:hint="Re-enter New Password"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:inputType="textPassword"/>
        </LinearLayout>

        <Button
            android:id="@+id/update_pass_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:textColor="@color/white"
            android:text="Update Password"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:padding="10dp"
            android:fontFamily="@font/balsamiq_sans"/>

    </LinearLayout>
</ScrollView>
